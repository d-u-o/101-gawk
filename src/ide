gitignore() { cat<<-EOF
	tmp/
	var/
	.bashrc
	.vimrc
	### Vim ###
	[._]*.s[a-w][a-z]
	[._]s[a-w][a-z]
	*.un~
	Session.vim
	awkprof.out
	awkvars.out
	.netrwhist
	*~
	EOF
}
requires() { cat<<-EOF
	gawk>4.2
	EOF
}
