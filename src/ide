#!/usr/bin/env bash

What="Duo101"
Who="Tim Menzies"
When=2018
HERE=$PWD
Var=$HERE/var
Tmp=$HERE/tmp

dirs() {
	mkdir -p $Var $Tmp
}
runable() {
	chmod +x gold
	#THERE=$(echo $PATH | gawk -F: '{print $1}')
	#sudo ln -sf $HERE/gold $THERE/gold
}
golden() { cat <<-'EOF'
	#!/usr/bin/env bash
	
	Var=$PWD/var
	
	prep() { gawk --source '
	{$0=gensub(/\.([^0-9])([a-zA-Z0-9_]*)/,"[\"\\1\\2\"]","g",$0)}
	{print gensub(/__/,".","g",$0)}
	' -
	}
	
	for i in *.awk; do
	  	if [ "$i" -nt "$Var/$i" ]; then
	     		cat $i | prep > $Var/$i
	  	fi
	done
	
	if [ -f "$1" ]; then
		AWKPATH="$Var" gawk -v Main="$(basename $1)" --source "`cat $1 | prep`"
	elif [ "$1" == "hi" ]; then
	  	git pull
	elif [ "$1" == "bye" ]; then
	  	git commit -am "pushing"
	  	git push
	  	git status
	else
	  	usage
	fi
	EOF
}
vimrc() { cat <<-EOF
	autocmd BufEnter * silent! lcd %:p:h
	filetype plugin indent on
	set autoindent
	set background=light
	set backspace=indent,eol,start
	set backupdir^=$Tmp
	set ignorecase
	set incsearch
	set laststatus=2
	set matchtime=15
	set modelines=3
	set mouse=a
	set nocompatible
	set nohlsearch
	set ruler
	set scrolloff=3
	set showmatch
	set smartcase
	set splitbelow
	set syntax=on
	set title
	set visualbell
	syntax enable
	set fillchars+=vert:\ 
	colorscheme torte
	hi VertSplit guifg=#202020 guibg=#202020 gui=NONE ctermfg=DarkGray ctermbg=DarkGray cterm=NONE
	EOF
}
