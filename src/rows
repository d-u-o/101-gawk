#!/usr/bin/env ./gold
# vim: filetype=awk: ts=2 sw=2 sts=2 expandtab:cindent:formatoptions+=cro 

@include "config"

BEGIN { FS = ","
        All[AU.ch.less]
        All[AU.ch.more]
        All[AU.ch.klass]
        All[AU.ch.num]
        All[AU.ch.sym]
      }
      {  gsub(/[ \t\r\'\"]*/, "") 
         gsub(/#__*$/,  "") 
      }
NR==1 { for(i=1;i<=NF;i++)  {
          char= substr($i,1,1)
          if (char != AU.ch.skip) 
            for(c in All) {
              if (c == char) 
                Header[c][i] }}
      }
      {  print ""
         for(c in Header) {
           s = c
           for(i in Header[c]) 
              s= s  FS $i 
           print s }
      }
