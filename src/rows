#!/usr/bin/env ./gold
# vim: filetype=awk: ts=2 sw=2 sts=2 expandtab:cindent:formatoptions+=cro 

@include "config"

BEGIN { FS = ","
        split( AU.ch.less AU.ch.more AU.ch.klass \
               AU.ch.num AU.ch.sym,  All, "") 
      }
      {  gsub(/[ \t\r\'\"]*/, "") 
         gsub(/#["*"]$/,  "") 
      }
NR==1 { for(i=1;i<=NF;i++)  {
          word= $i
          char= substr(word,1,1)
          if (char != AU.ch.skip) 
            for(j in All) {
              k = All[j]
              if (k == char) 
                Header[ k ][i] }}
      }
      {  print ""
         for(j in All) {
           k = All[j]
           printf k
           if (k in Header)
             for(i in Header[k]) 
               printf FS $i 
           print "" }
      }
